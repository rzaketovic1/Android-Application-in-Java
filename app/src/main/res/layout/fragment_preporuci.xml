<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:textSize="30dp"
        android:text="Knjiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewKnjiga" />

    <TextView
        android:text="Autor"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewKnjiga"
        android:layout_centerHorizontal="true"

        android:id="@+id/textViewAutor" />

    <TextView
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAutor"
        android:id="@+id/textViewGodina"
        />


    <Button
        android:text="@string/Posalji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dPosalji"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewKnjiga"
        android:layout_alignEnd="@+id/textViewKnjiga"
        android:layout_marginBottom="74dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/sKontakti"
        android:layout_alignBottom="@+id/dPosalji"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp" />


</RelativeLayout>